@model IEnumerable<EmployeeCRUD.Models.UsersConsumptionData>

<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.13.1/b-2.3.3/fc-4.2.1/r-2.4.0/sc-2.0.7/sb-1.4.0/sp-2.1.0/sl-1.5.0/datatables.min.css" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
            display: block;
            overflow-x: auto;
            white-space: nowrap;
        }
        .header{
            text-align: center;
           font-family: "Times New Roman", Times, serif;
        }

    </style>


</head>
<body>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <a asp-action="Filecontainer" asp-controller="Home"><button type="button" class="btn btn-primary" value="DataSubmission"> Back to mainmenu </button></a>
    <center> <h2>LIST OF USER CONSUMPTION DATA</h2></center>
    <br />
    <br />
    <br />
    <form method="get" asp-action="Index">
        <p>
            <input type="search" placeholder="Enter name or ResourceGroup" value="@ViewData["Getemployeedetails"]" name="Empsearch" style="width:500px" ; />
            <input type="submit"  value="search" class="btn btn-primary" />
            <a asp-action="Index">Get All List</a>

        </p>

    </form>
    
    
    
    <div class="table-responsive-xl">
        <table class="table table-bordered table-hover table-responsive-xl" id="mytable">
            <thead>
                <tr>
 
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TYPE)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RESOURCEGROUP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Environment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SplitPercentage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SplitGroup)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Consumed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecordCreatedOn)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                     
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TYPE)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RESOURCEGROUP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Environment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SplitPercentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SplitGroup)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Consumed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RecordCreatedOn)
                        </td>
                        <td>

                            <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class=" btn btn-secondary float-right" value="DataSubmission"> Update </button></a>
                            <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class=" btn btn-secondary float-right" value="DataSubmission"> Details </button></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class=" btn btn-secondary float-right" value="DataSubmission"> Delete </button></a>



                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.13.1/b-2.3.3/fc-4.2.1/r-2.4.0/sc-2.0.7/sb-1.4.0/sp-2.1.0/sl-1.5.0/datatables.min.js"></script>

</body>
</html>